<h1><%= @company.name %></h1>
<b>Buildings:</b>
<ul>
<% @company.offices.each do |o| %>
<li><%= link_to o.building.name, building_path(o.building) %></li>
<% end %>
</ul>
<b>Rent total:</b> <%= number_to_currency(@company.total_rent, precision: 0)  %><br><br>
<%= button_to 'Add New Employee', new_employee_path, method: :get %> <br>
<b>Employee list:</b><br>
<ul>
<% @company.employees.each do |e| %>
<li><b>Name: </b><%= e.name %><br>
<b>Title: </b><%= e.title %><br>
<%= button_to "Edit", edit_employee_path(e.id), method: :get, class: :employee %>
<%= button_to "Remove", employee_path(e.id), method: :delete, class: :employee %></li><br>
<% end %>
</ul>